@model BesyProject.Models.Servico

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Deletando dados de Serviço";
}

<!-- Panel Nome-->
<div class="form-group">
    @Html.LabelFor(model => model.Descricao)
    <br />
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon
                       glyphicon-user"></i>
        </span>
        @Html.EditorFor(model => model.Descricao,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
    </div>
</div>
<!--End Panel Nome-->
<!-- Panel Nome-->
<div class="form-group">
    @Html.LabelFor(model => model.Descricao)
    <br />
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon
                       glyphicon-user"></i>
        </span>
        @Html.EditorFor(model => model.Descricao,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
    </div>
</div>
<!--End Panel Nome-->
<div class="panel-footer panel-info">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal">Remover SERVICO</a>
        @Html.ActionLink(
               "Retornar para a listagem",
               "Index", null, new
               {
                   @class =
               "btn btn-info"
               })
    }
</div>






<div class="modal	fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-ELTEismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">Confirmação	de	exclusão	de Serviço</h4>
            </div>
            <div class="modal-body">
                <p>
                    Você	está	prestes	a	remover	o	serviço	@Model.Descricao.ToUpper()	do	cadastro.
                </p><p>
                    <strong>
                        Você	está	certo	que	deseja	prosseguir?
                    </strong>
                    </p>
            @using (Html.BeginForm("Delete", "Servicos", FormMethod.Post,
                new { @id = "delete-form", role = "form" })){
                @Html.HiddenFor(m => m.ServicoId)
                @Html.AntiForgeryToken()
            }
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-default" onclick="$('#delete-form').submit();">
                Sim, exclua este serviço.
                </button>
            <button type="button" class="btn btn-primary" data-dismiss="modal">
                Não, não exclua este servico.
                </button>
            </div>
        </div>
    </div>
</div>
@section ScriptPage	{
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liServicos').addClass("active");
        });
        </script> }
