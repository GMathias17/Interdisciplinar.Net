						<i class="glyphicon
            glyphicon-phone"></i>
					</span>
					@Html.EditorFor(model => model.Telefone,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
				</div>
			</div>
			<!-- #endregion -->


			<!-- #Panel CPF -->
			<div class="form-group">
				@Html.LabelFor(model => model.Cnpj)
				<br />
