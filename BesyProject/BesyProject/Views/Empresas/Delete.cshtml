         })
				</div>
			</div>
			<!-- #endregion -->

		<!-- #Panel Footer-->
		<div class="panel-footer panel-info">
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				<input type="submit" value="Remover EMPRESA" class="btn btn-danger" />
					@Html.ActionLink(
			   "Retornar para a listagem",
			   "Index", null, new
			   {
				   @class =
			   "btn btn-info"
			   })
			}
		</div>

		<!-- #endregion-->