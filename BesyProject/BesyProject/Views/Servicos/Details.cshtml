@model BesyProject.Models.Servico

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes do Servico";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div>
            <h4>Visualizando dados do Servico</h4>
            <hr />
        </div>
    </div>
    <div class="panel-body">
        <!-- #Panel Nome -->
        <div class="form-group">
            @Html.LabelFor(model => model.Descricao)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Descricao,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
            </div>
        </div>
        <!-- #endregion -->

        @Html.Partial("~/Views/Empresas/_PorServico.cshtml", Model.Empresas.ToList())

        <!-- #Panel Footer -->
        <div class="panel-footer panel-info">
            @Html.ActionLink("Alterar", "Edit", new
       {
           id =
       Model.ServicoId
       }, new
       {
           @class =
       "btn btn-info"
       })
            @Html.ActionLink("Retornar para a listagem",
       "Index", null, new { @class = "btn btn-info" })
        </div>
        <!-- #endregion -->
    </div>
</div>

@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
}
@section ScriptPage {
    <script src=" @Url.Content("~/scripts/DataTables/jquery.dataTables.js") "></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable();
        });
    </script>
}
