@model BesyProject.Models.Servico

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Deletando dados de Serviço";
}

<!-- Panel Nome-->
<div class="form-group">
    @Html.LabelFor(model => model.Descricao)
    <br />
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon
                       glyphicon-user"></i>
        </span>
        @Html.EditorFor(model => model.Descricao,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
    </div>
</div>
<!--End Panel Nome-->

<!-- Panel Nome-->
<div class="form-group">
    @Html.LabelFor(model => model.Tipo)
    <br />
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon
                       glyphicon-user"></i>
        </span>
        @Html.EditorFor(model => model.Tipo,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
    </div>
</div>
<!--End Panel Nome-->
   <div class="panel-footer panel-info">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Remover SERVICO" class="btn btn-danger" />
                    @Html.ActionLink(
               "Retornar para a listagem",
               "Index", null, new
               {
                   @class =
               "btn btn-info"
               })
    }
</div>
