@model BesyProject.Models.Servico

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes do Servico";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div>
            <h4>Visualizando dados do Servico</h4>
            <hr />
        </div>
    </div>
    <div class="panel-body">
        <!-- #Panel Nome -->
        <div class="form-group">
            @Html.LabelFor(model => model.Descricao)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon
                       glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Descricao,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
            </div>
        </div>
        <!-- #endregion -->

        <!-- #Panel Tipo -->
        <div class="form-group">
            @Html.LabelFor(model => model.Tipo)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon
                       glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Tipo,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
            </div>


        </div>
        <!-- #endregion -->
        <!-- #Panel Footer -->
        <div class="panel-footer panel-info">
            @Html.ActionLink("Alterar", "Edit", new
       {
           id =
       Model.ServicoId
       }, new
       {
           @class =
       "btn btn-info"
       })
            @Html.ActionLink("Retornar para a listagem",
       "Index", null, new { @class = "btn btn-info" })
        </div>
        <!-- #endregion -->