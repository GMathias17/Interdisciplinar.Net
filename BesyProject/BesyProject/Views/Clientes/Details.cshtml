@model BesyProject.Models.Cliente

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes do Cliente";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <div>
            <h4>Visualizando dados do Cliente</h4>
            <hr />
        </div>
    </div>
    <div class="panel-body">
        <!-- #Panel Nome -->
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon
                       glyphicon-user"></i>
                </span>
                @Html.EditorFor(model => model.Nome,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
            </div>
        </div>
        <!-- #endregion -->




        <!-- #Panel Endereco -->
        <div class="form-group">
            @Html.LabelFor(model => model.Endereco)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon
                       glyphicon-globe"></i>
                </span>
                @Html.EditorFor(model => model.Endereco,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
            </div>
        </div>
        <!-- #endregion -->
        
        
        
         <!-- #Panel Telefone -->
        <div class="form-group">
            @Html.LabelFor(model => model.Telefone)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon
            glyphicon-phone"></i>
                </span>
                @Html.EditorFor(model => model.Telefone,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
            </div>
        </div>
        <!-- #endregion -->




        <!-- #Panel CPF -->
        <div class="form-group">
            @Html.LabelFor(model => model.CPF)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon
            glyphicon-list-alt"></i>
                </span>
                @Html.EditorFor(model => model.CPF,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
            </div>
        </div>
        <!-- #endregion -->
        
        
        
        <!-- #Panel Footer -->
        <div class="panel-footer panel-info">
            @Html.ActionLink("Alterar", "Edit", new
               {
                   id =
       Model.ClienteId
               }, new
               {
                   @class =
       "btn btn-info"
               })
            @Html.ActionLink("Retornar para a listagem",
       "Index", null, new { @class = "btn btn-info" })
        </div>
       <!-- #endregion -->


