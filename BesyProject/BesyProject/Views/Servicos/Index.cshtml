@model IEnumerable<BesyProject.Models.Servico>
    
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Requisicao de servicos";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Registro de Servico
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div>
                <h4>Visualizando dados da Empresa</h4>
                <hr />
            </div>
        </div>
        <div class="panel-body">

            <!-- #Panel Nome -->
            <div class="form-group">
                @Html.LabelFor(model => model.Nome)
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon
                       glyphicon-user"></i>
                    </span>
                    @Html.EditorFor(model => model.Nome,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
                </div>
            </div>
            <!-- #endregion -->

         
            <!-- #Panel Telefone -->
            <div class="form-group">
                @Html.LabelFor(model => model.Telefone)
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon
            glyphicon-phone"></i>
                    </span>
                    @Html.EditorFor(model => model.Telefone,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
                </div>
            </div>
            <!-- #endregion -->

           
            <!-- #Panel Especialidade -->
            <div class="form-group">
                @Html.LabelFor(model => model.Especialidade)
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon
            glyphicon-list-alt"></i>
                    </span>
                    @Html.EditorFor(model => model.Especialidade,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
                </div>
            </div>
            <!-- #endregion -->

            <button type="button" class="btn btn-default">
                @Html.ActionLink("Requisitar Servico",
                          "Controladora", "Servicos")
            </button> 

            

                @section styles{
                    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />}

                @section ScriptPage {
                    <script src=" @Url.Content("~/scripts/DataTables/jquery.dataTables.js") "></script>
                    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
                    <script type="text/javascript">
                        $(document).ready(function () {
                            $('.table').dataTable();
                        });
                    </script>
                }
