                       glyphicon-globe"></i>
					</span>
					@Html.EditorFor(model => model.Endereco,
         new
         {
             htmlAttributes = new
             {
                 @class = "form-control",
                 disabled = "disabled"
             }
         })
				</div>
			</div>
			<!-- #endregion -->


			<!-- #Panel Telefone -->
			<div class="form-group">
				@Html.LabelFor(model => model.Telefone)
				<br />
